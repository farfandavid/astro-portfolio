---
import Navbar from "../components/Navbar.astro";
const { title, description } = Astro.props;
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta
            name="viewport"
            content="user-scalable=no, width=device-width, initial-scale=1.0"
        />
        <link rel="shortcut icon" href="icon_logo_v2.png" type="image/x-icon" />
        <meta name="description" content={description || " Description"} />
        <meta
            name="keywords"
            content="HTML, CSS, JavaScript, Astro, ReactJS, TailwindCSS, MongoDB, FullStack Developer, Web Developer, Frontend Developer, Backend Developer, MERN Stack, MEAN Stack, PERN Stack, PEAN Stack, JAMStack, Serverless, Cloud Computing, AWS, GCP, Azure, Firebase, Netlify, Vercel, Heroku, DigitalOcean, Linode, Vultr, Cloudflare, CloudFront"
        />
        <meta name="author" content="Farfan David Dante" />
        <meta name="robots" content="index, service" />
        <meta name="revisit-after" content="3 days" />
        <meta name="generator" content="Astro" />

        <!-- Facebook Meta Tags -->
        <meta property="og:url" content="https://farfetchdev.web.app" />
        <meta property="og:type" content="website" />
        <meta property="og:title" content={title} />
        <meta property="og:description" content={description} />
        <meta property="og:image" content="" />

        <!-- Twitter Meta Tags -->
        <meta name="twitter:card" content="summary_large_image" />
        <meta property="twitter:domain" content="farfetchdev.web.app" />
        <meta property="twitter:url" content="https://farfetchdev.web.app" />
        <meta name="twitter:title" content={title} />
        <meta name="twitter:description" content={description} />
        <meta
            name="twitter:image"
            content="https://farfetchdev.web.app/assets/img/farfetchdev_logo.png"
        />

        <title>{title || "Title"}</title>
        <link
            href="https://fonts.googleapis.com/css?family=Oxanium&display=swap"
            rel="stylesheet"
        />
        <!-- Option 1: Include in HTML -->
        <link
            rel="stylesheet"
            href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css"
        />
        <link
            rel="stylesheet"
            type="text/css"
            href="https://cdn.jsdelivr.net/gh/devicons/devicon@latest/devicon.min.css"
        />
    </head>
    <body>
        <Navbar />
        <main id="main">
            <slot />
        </main>
    </body>
</html>
<style is:global>
    :root {
        --primary: #007bff;
        --secondary: #6c757d;
        --success: #28a745;
        --info: #17a2b8;
        --warning: #ffc107;
        --danger: #dc3545;
        --light: #f8f9fa;
        --dark: #343a40;
        --navbar-height: 68px;
    }
    * {
        box-sizing: border-box;
    }
    html {
        padding: 0;
        margin: 0;
        color: white;
        font-family: "Oxanium", sans-serif;
        scroll-behavior: smooth;
        scroll-snap-type: y proximity;
    }
    body {
        margin: 0;
        padding: 0;
        background: #2e2e52;
    }
    ::-webkit-scrollbar {
        display: none;
    }

    section {
        height: 100dvh;
        max-height: 100dvh;
        width: 100dvw;
        max-width: 100dvw;
        scroll-snap-align: center;
        padding: 0 20px;
    }
    .title {
        font-size: 1.8rem;
        font-weight: bold;
    }
    .center-x {
        display: flex;
        justify-content: center;
    }

    section > h1 {
        margin: 0;
    }

    main {
        display: flex;
        flex-direction: column;
        width: 100dvw;
    }

    @media screen and (max-width: 500px) {
        .title {
            font-size: 1.3rem;
            font-weight: bold;
        }
    }
</style>
<script></script>
