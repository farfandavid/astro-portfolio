---
interface Props {
    skill: string;
    icon: string;
    color: string;
}

const { skill, icon, color } = Astro.props
---

<div class="flex items-center justify-start rounded-md px-3 py-1 gap-2">
    <i class={`${icon} text-4xl ${color}`}></i>
    <p class="font-bold text-gray-100">{skill}</p>
</div>